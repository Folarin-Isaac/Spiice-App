<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".models.SendYourWorkFragment">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        android:text="Francisco Fisher"
        android:textColor="#120E21"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/image1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sendWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send your work"
        android:layout_marginStart="24dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#120E21"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="56dp"/>

    <View
        android:id="@+id/messageboard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/messageboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendWork"></View>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Message"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/messageboard"
        app:layout_constraintEnd_toEndOf="@+id/messageboard"
        app:layout_constraintStart_toStartOf="@+id/messageboard"
        app:layout_constraintTop_toTopOf="@+id/messageboard" />
    <View
        android:id="@+id/upload_board"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageboard"
        android:background="@drawable/upload_form"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="#FBEEFF"
        android:src="@drawable/uploaded"
        app:layout_constraintEnd_toEndOf="@id/upload_board"
        app:layout_constraintTop_toTopOf="@id/upload_board" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:hint="Upload file"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/upload_board"
        app:layout_constraintTop_toTopOf="@id/upload_board" />
    
    <View
        android:id="@+id/sketch_board"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border_upload"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/upload_board"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="#E5E5E5"
        android:src="@drawable/cancel_icon"
        app:layout_constraintEnd_toEndOf="@id/sketch_board"
        app:layout_constraintTop_toTopOf="@id/sketch_board" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="wireframes.sketch"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/sketch_board"
        app:layout_constraintTop_toTopOf="@+id/sketch_board"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/send_your_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@drawable/wireframe_button_background"
        android:text="Send"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    


</androidx.constraintlayout.widget.ConstraintLayout>