<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".models.SendYourWorkFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="72dp"
                android:background="@drawable/img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="72dp"
                android:text="Francisco Fisher"
                android:textColor="#120E21"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/image1"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/sendWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send your work"
                android:layout_marginStart="24dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#120E21"
                app:layout_constraintTop_toBottomOf="@id/image1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="56dp"/>

            <EditText
                android:id="@+id/Message1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/messageboard"
                android:lineSpacingExtra="10sp"
                android:padding="5dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sendWork" />

            <ImageView
                android:id="@+id/upload_board"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/upload_form"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Message1" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:background="#FBEEFF"
                android:src="@drawable/uploaded"
                app:layout_constraintBottom_toBottomOf="@+id/upload_board"
                app:layout_constraintEnd_toEndOf="@id/upload_board"
                app:layout_constraintTop_toTopOf="@id/upload_board" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:hint="Upload file"
                android:textSize="22dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/upload_board"
                app:layout_constraintEnd_toStartOf="@+id/imageButton"
                app:layout_constraintStart_toStartOf="@id/upload_board"
                app:layout_constraintTop_toTopOf="@id/upload_board"/>

            <ImageView
                android:id="@+id/sketch_board"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/border_upload"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upload_board" />

            <ImageButton
                android:id="@+id/cancel_Button"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:background="#E5E5E5"
                android:src="@drawable/cancel_icon"
                app:layout_constraintBottom_toBottomOf="@+id/sketch_board"
                app:layout_constraintEnd_toEndOf="@id/sketch_board"
                app:layout_constraintTop_toTopOf="@id/sketch_board" />


            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:hint="wireframes.sketch"
                android:textSize="22dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/sketch_board"
                app:layout_constraintEnd_toStartOf="@+id/cancel_Button"
                app:layout_constraintStart_toStartOf="@id/sketch_board"
                app:layout_constraintTop_toTopOf="@id/sketch_board"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:background="@drawable/wireframe_button_background"
                android:text="Send"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/cardview_light_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sketch_board" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>







    


</androidx.constraintlayout.widget.ConstraintLayout>