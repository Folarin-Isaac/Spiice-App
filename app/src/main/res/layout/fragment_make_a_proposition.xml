<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MakeAPropositionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/search_profile_image1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="64dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="64dp"
                android:text="Arlene Mckinney"
                android:textAllCaps="false"
                android:textColor="#120E21"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/search_profile_image1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/PostedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24sp"
                android:text="Posted 3 days ago"
                android:textAllCaps="false"
                android:textColor="#99879D"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search_profile_image1" />


            <TextView
                android:id="@+id/create_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="24dp"
                android:text="Create an application"
                android:textAllCaps="false"
                android:textColor="#120E21"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PostedDate" />

            <TextView
                android:id="@+id/long_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="5dp"
                android:text="We are a young startup from Paris looking\nfor a designer who can help us design a\ntech oriented application. We are open to\nproposals. \nYou can saw our project here:\nhttp://www.zotware.com\n We are working with Figma and Photoshop"
                android:textAllCaps="false"
                android:textColor="#99879D"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_headline" />

            <TextView
                android:id="@+id/faint_proposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="20dp"
                android:text="16 propositions"
                android:textAllCaps="false"
                android:textColor="#A399879D"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/long_text" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16sp"
                android:text="$2400"
                android:textAllCaps="false"
                android:textColor="#9378FF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/long_text" />

            <TextView
                android:id="@+id/UI_UX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_background"
                android:padding="5sp"
                android:text="UX/UI"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/faint_proposition" />

            <TextView
                android:id="@+id/design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_background"
                android:padding="5sp"
                android:text="DESIGN"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/UI_UX"
                app:layout_constraintTop_toBottomOf="@+id/faint_proposition" />

            <TextView
                android:id="@+id/figma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_background"
                android:padding="5sp"
                android:text="FIGMA"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/design"
                app:layout_constraintTop_toBottomOf="@+id/faint_proposition" />

            <TextView
                android:id="@+id/photoshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_background"
                android:padding="5sp"
                android:text="PHOTOSHOP"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/figma"
                app:layout_constraintTop_toBottomOf="@+id/faint_proposition" />

            <Button
                android:id="@+id/make_a_proposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/wireframe_button_background"
                android:text="Make a Proposition"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/figma" />








        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>